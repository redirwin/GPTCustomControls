{
  "manifest_version": 3,
  "name": "Prevent Textarea Submit",
  "version": "1.0",
  "description": "Prevents form submission when Enter is pressed in a textarea.",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "scripts/preventTextareaSubmitOnEnter.js",
        "scripts/autoSaveTextareaContent.js"
      ]
    }
  ]
}
